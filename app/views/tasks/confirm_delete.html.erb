<div class="index-container">
  <h1>タスク削除の確認</h1>
  <div class="task-index-item">
    <div class="task-title"><%= @task.title %></div>
    <div class="task-content"><%= @task.content %></div>
    <% if @task.deadline %>
      <div class="task-deadline">期限: <%= @task.deadline.strftime('%Y年%m月%d日') %></div>
    <% end %>
    <div class="form-actions">
      <%= form_with url: task_path(@task), method: :delete do %>
        <%= submit_tag '削除する', class: 'btn btn-danger' %>
        <%= link_to 'キャンセル', tasks_path, class: 'btn btn-secondary' %>
      <% end %>
    </div>
  </div>
</div>
