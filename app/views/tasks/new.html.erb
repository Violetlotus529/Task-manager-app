<h1>Tasks#new</h1>
<p>Find me in app/views/tasks/new.html.erb</p>
<div class="form-container">
   <h1>新しいタスクを作成</h1>

   <%= form_tag("/tasks", method: :post, class: "form") do %>
     <div class="form-group">
        <% if defined?(@task) && @task&.errors&.any? %>
          <div class="error-message">
             <h3><%= @task.errors.count %>件のエラーがあります:</h3>
             <ul>
                <% if defined?(@task) && @task&.errors&.any? %>
                  <% @task.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                <% end %>
             </ul>
           </div>
        <% end %>



       <label for="title">タイトル:</label>
       <input type="text" name="task[title]" value="<%= @task&.title %>" class="form-input" required>
     </div>

     <div class="form-group">
       <label for="content">内容</label>
       <textarea name="task[content]" class="form-textarea" rows="5"><%= @task&.content %></textarea>
     </div>

     <div class="form-group">
       <label for="deadline">期限:</label>
       <input type="date" name="task[deadline]" value="<%= @task.deadline&.strftime('%Y-%m-%d') %>" class="form-input">
     </div>
     <div class="form-group">
       <%= check_box_tag "task[completed]", "1", @task&.completed %>
       <%= label_tag "task[completed]", "完了" %>

     <div class="form-actions">
       <input type="submit" value="Create Task" class="btn btn-primary">
       <%= link_to "キャンセル", "/tasks", class: "btn btn-secondary" %>
     </div>
   <% end %>
</div>