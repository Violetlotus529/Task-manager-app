<h1>Tasks#new</h1>
<p>Find me in app/views/tasks/new.html.erb</p>
<div class="form-container">
   <h1>New Task</h1>

   <%= form_tag("/tasks", method: :post, class: "form") do %>
     <div class="form-group">
        <% if defined?(@task) && @task&.errors&.any? %>
          <div class="error-message">
             <h3>There is<%= @task.errors.count %>error:</h3>
             <ul>
                <% if defined?(@task) && @task&.errors&.any? %>
                  <% @task.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                <% end %>
             </ul>
           </div>
        <% end %>



       <label for="title">Title:</label>
       <input type="text" name="task[title]" value="<%= @task&.title %>" class="form-input" required>
     </div>

     <div class="form-group">
       <label for="content">Content:</label>
       <textarea name="task[content]" class="form-textarea" rows="5"><%= @task&.content %></textarea>
     </div>

     <div class="form-group">
       <label for="deadline">Deadline:</label>
       <input type="date" name="task[deadline]" value="<%= @task.deadline&.strftime('%Y-%m-%d') %>" class="form-input">
     </div>

     <div class="form-group">
      <%= label_tag "task[priority]", "Priority:" %>
      <%= select_tag "task[priority]",
          options_for_select([
            ['Low'],
            ['Medium'],
            ['High']
          ], @task&.priority),
          class: "form-input" %>
     </div>

     <div class="form-group">
       <%= label_tag "task[status]", "Status:" %>
       <%= select_tag "task[status]",
           options_for_select([
            ['Not_started'],
            ['In_progress'],
            ['Completed']
          ], @task&.status),
          class: "form-input" %>

     <div class="form-actions">
       <input type="submit" value="Create Task" class="btn btn-primary">
       <%= link_to "Cancel", "/tasks", class: "btn btn-secondary" %>
     </div>
   <% end %>
</div>