<div class="edit-container">
  <h1>Edit</h1>
  
  <%= form_tag("/tasks/#{@task.id}", method: :patch, class: "edit-form") do %>
    <div class="form-group">
      <label for="title">Title:</label>
      <input type="text" name="task[title]" value="<%= @task.title %>" class="form-input" required>
    </div>
    
    <div class="form-group">
      <label for="content">Content:</label>
      <textarea name="task[content]" class="form-textarea" rows="5"><%= @task.content %></textarea>
    </div>
    
    <div class="form-group">
      <label for="deadline">Deadline:</label>
      <input type="date" name="task[deadline]" value="<%= @task.deadline&.strftime('%Y-%m-%d') %>" class="form-input">
    </div>
    
    <div class="form-group">
      <%= label_tag "task[priority]", "Priority:" %>
      <%= select_tag "task[priority]", 
          options_for_select([
            ['Low', 'low'],
            ['Medium', 'medium'], 
            ['High', 'high']
          ], @task&.priority), 
          class: "form-input" %>
    </div>

    <div class="form-group">
      <%= check_box_tag "task[completed]", "1", @task&.completed %>
      <%= label_tag "task[completed]", "未完了" %>
    </div>

    <div class="form-actions">
      <input type="submit" value="Update" class="btn btn-primary">
      <%= link_to "Cancel", tasks_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>


