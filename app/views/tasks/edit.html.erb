<div class="edit-container">
  <h1>タスクを編集</h1>
  
  <%= form_tag("/tasks/#{@task.id}", method: :patch, class: "edit-form") do %>
    <div class="form-group">
      <label for="title">タイトル:</label>
      <input type="text" name="task[title]" value="<%= @task.title %>" class="form-input" required>
    </div>
    
    <div class="form-group">
      <label for="content">内容:</label>
      <textarea name="task[content]" class="form-textarea" rows="5"><%= @task.content %></textarea>
    </div>
    
    <div class="form-group">
      <label for="deadline">期限:</label>
      <input type="date" name="task[deadline]" value="<%= @task.deadline&.strftime('%Y-%m-%d') %>" class="form-input">
    </div>
    
    <div class="form-actions">
      <input type="submit" value="更新" class="btn btn-primary">
      <%= link_to "キャンセル", "/tasks/#{@task.id}", class: "btn btn-secondary" %>
      <%= link_to "一覧に戻る", "/tasks", class: "btn btn-outline" %>
    </div>
  <% end %>
</div>


